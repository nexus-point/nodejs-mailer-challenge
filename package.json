{
  "name": "serverless-nodejs-mailer-challenge",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "tsc": "tsc",
    "prestart": "npm run tsc",
    "start": "node --trace-warnings dist/app.js",
    "build:watch": "npm run tsc -- --watch",
    "start:dev": "nodemon dist/app.js",
    "start:dev:watch": "npm-run-all tsc --parallel start:dev build:watch",
    "start:tsdev": "ts-node-dev src/app.ts",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "coverage": "nyc npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexus-point/nodejs-mailer-challenge.git"
  },
  "author": "nexuspoint",
  "license": "all rights reserved, copyright 2021 nexuspoint",
  "bugs": {
    "url": "https://github.com/nexus-point/nodejs-mailer-challenge/issues"
  },
  "homepage": "https://github.com/nexus-point/nodejs-mailer-challenge#readme",
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.27",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "chai": "^4.3.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "serverless": "^2.24.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "5.11.15",
    "serverless-http": "^2.7.0"
  }
}
